<!-- Redirect script for desktop -->
<script>
    function redirectIfDesktop() {
        const width = window.innerWidth;
        const path = window.location.pathname.toLowerCase();

        console.log("Checking screen width:", width);
        if (width >= 768 && !path.includes("/spanish/index")) {
            console.log("Redirecting to /Spanish/Index");
            window.location.href = "/Spanish/Index";
        } else if (width < 768) {
            console.log("Screen width < 768, no redirect.");
        }
    }

    window.addEventListener("load", redirectIfDesktop);
    window.addEventListener("resize", redirectIfDesktop);
</script>



